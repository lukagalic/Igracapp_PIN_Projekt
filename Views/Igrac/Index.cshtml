@model IEnumerable<Igracapp.Models.Igrac>

@{
    ViewData["Title"] = "Profil";
}

<h1>Profil</h1>

<p>
    <a asp-action="Create">Izradi novi Profil</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImePrezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Klub)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatRod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalnost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opsirnije)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImePrezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Klub)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatRod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalnost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opsirnije.Pozicija)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
